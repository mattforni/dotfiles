    "eslint-plugin-import": "2.20.1",
    "jasmine-fix": "1.3.1",
    "rimraf": "3.0.2"
  },
  "engines": {
    "atom": ">=1.13.0 <2.0.0"
  },
  "eslintConfig": {
    "rules": {
      "no-console": "off",
      "semi": [
        "error",
        "never"
      ],
      "comma-dangle": "off",
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ],
      "object-curly-newline": [
        "error",
        {
          "ObjectExpression": {
            "minProperties": 5,
            "multiline": true,
            "consistent": true
          },
          "ObjectPattern": {
            "minProperties": 5,
            "multiline": true,
            "consistent": true
          }
        }
      ]
    },
    "extends": "airbnb-base",
    "globals": {
      "atom": "true"
    },
    "env": {
      "node": true,
      "browser": true
    }
  },
  "homepage": "https://github.com/AtomLinter/linter-eslint#readme",
  "license": "MIT",
  "main": "./dist/main.js",
  "name": "linter-eslint",
  "package-deps": [
    {
      "name": "linter",
      "minimumVersion": "3.3.0"
    }
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtomLinter/linter-eslint.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=development cross-env BABEL_KEEP_MODULES=false babel src --out-dir dist --delete-dir-on-start",
    "build-commit": "build-commit -o dist",
    "clean": "rimraf dist",
    "dev": "npm run build -- --watch",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "prepare": "npm run build",
    "test": "npm run build && atom --test spec",
    "test.format": "prettier . --check",
    "test.lint": "npm run build && eslint ."
  },
  "version": "8.6.6"
