[alias]
    a = add
    aa = add . -u
    b = branch
    bl = blame
    c = commit
    cm = commit -m
    d = diff
    drb = branch -d -r
    co = checkout
    l = log
    lg = log --graph --decorate --pretty=oneline --abbrev-commit
    ph = push
    pl = pull
    r = reset HEAD
    s = status
    u = update-index --assume-unchanged
[color]
    ui = auto
[color "diff"]
    meta = yellow bold
    frag = magenta ul
    old = red bold
    new = green
[color "status"]
    added = green
    changed = yellow bold
    untracked = cyan
[core]
    editor = vim

