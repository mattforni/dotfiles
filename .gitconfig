[alias]
    # Workflow based aliases
    a = add
    aa = add -A
    at = add -u
    b = branch
    bd = branch -d
    bdf = branch -D
    bl = blame
    bm = branch -m
    bu = branch -u
    c = commit
    ca = commit --amend
    cara = commit --amend --reset-author
    cm = commit -m
    co = checkout
    con = config
    conl = config --list
    d = diff
    drb = branch -d -r
    forget = update-index --assume-unchanged
    l = log
    lg = log --graph --decorate --pretty=oneline --abbrev-commit
    lol = log --graph --oneline
    lss = diff --name-status --staged
    lsu = diff --name-status
    mg = merge
    ph = push
    pl = pull
    reh = reset HEAD
    reh1 = reset HEAD~1
    ra = remote add
    rr = remote rm
    rv = remote -v
    s = status
    sth = stash
    sthd = stash drop
    sthp = stash pop
    sths = stash show

    # Config based aliases
    name = "config user.name 'Matthew Fornaciari'"
    gremlin = "config user.email 'matt@gremlininc.com'"
    personal = "config user.email 'mattforni@gmail.com'"
[color]
    ui = auto
[color "diff"]
    meta = yellow bold
    frag = magenta ul
    old = red bold
    new = green
[color "status"]
    added = green
    changed = yellow bold
    untracked = cyan
[core]
    editor = vim
[push]
    default = current
[credential]
    helper = cache --timeout=86400

