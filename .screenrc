# Change the escape key from 'a' to 'z'
escape ^Zz
# Autodetach from a session on hangup instead of terminating
autodetach on
# Turn off that annoying splash screen
startup_message off
# Use a 30,000 line scrollback buffer by default
defscrollback 30000
# Set and style captions
caption always '%{= kw}%-w%{+bs bW}%n-%t%{-}%+w %-= @%H - %D, %M %d %Y - %c:%s'

